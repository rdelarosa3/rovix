<div class="vid-container">
  <video class="bgvid" autoplay="autoplay" muted="muted" preload="auto" loop>
      <source src="http://mazwai.com/system/posts/videos/000/000/186/original/390214194.mp4?1445111847" type="video/mp4">
  </video>
  <div class="inner-container">
    <video class="bgvid inner" autoplay="autoplay" muted="muted" preload="auto" loop>
      <source src="http://mazwai.com/system/posts/videos/000/000/186/original/390214194.mp4?1445111847" type="video/mp4">
    </video>
    <div class="box">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        label:false,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" , placeholder:"EMAIL"} %>
            <%= f.input :password,
                        label:false,
                        required: false,
                        input_html: { autocomplete: "current-password",placeholder:"PASSWORD" } %>
            <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>

      <p>Not a member? <span> <%= link_to "Sign up", new_registration_path(resource_name) %></span></p>
      
    </div>
  </div>
</div>




<% render "devise/shared/links" %>
