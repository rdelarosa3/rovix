 
 
 <div class="col-12 col-md-4">

<h2 class="h4 mb-4">Sign up</h2>
 
<%= simple_form_for(resource, as: resource_name,url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true ,
                input_html: {class: "form-control mb-4",id:"defaultLoginFormEmail",placeholder:"First Name"}, label: false%>
 
    <%= f.input :last_name ,
                required: true,
                autofocus: true ,
                input_html: {class: "form-control mb-4",id:"defaultLoginFormEmail",placeholder:"Last Name"}, label: false  %>

    <%= f.file_field :avatar %>  
    <%= f.input :email,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "email",class: "form-control mb-4",id:"defaultLoginFormEmail" ,placeholder:"E-mail"}, label: false %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password",class: "form-control mb-4",id:"defaultLoginFormPassword" ,placeholder:"Password"}, label: false %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" ,class: "form-control mb-4",id:"defaultLoginFormPassword",placeholder:"Password Confirmation"}, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" ,class:"btn btn-info btn-block my-4"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>


