<div class="container">
  <div class="row">
    <div class="col-md-3 " style="padding-left:-10px;margin-left:-20px;"></div>
      <div class="col-md-6 mb-2" style="box-shadow: 0 4px 18px 0px rgba(0, 0, 0, 0.12), 0 7px 10px -5px rgba(0, 0, 0, 0.15);">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put ,class: "text-center border border-light p-5"}) do |f| %>
          <%= f.error_notification %>
            <p class="h4 mb-4">Edit <%= resource_name.to_s.humanize %></p>



          <div class="text-field mb-4 ">
            <%= f.label :first_name %> 
            <%= f.input :first_name,required: true, autofocus: true,label:false ,input_html: { class: "form-control"} %>
          </div>
            <div class="text-field mb-4">
            <%= f.label :last_name %> 
            <%= f.input :last_name, required: true, autofocus: true ,label:false,input_html: { class: "form-control"}%>
              </div>  
              <div class="text-field mb-4">
            <%= f.label :email %> 
            <%= f.input :email, required: true, autofocus: true ,label:false,input_html: { class: "form-control"}%>
            </div>
              <%= f.label :avatar %> 
              <div class="text-field mb-4 text-center">
              <%= f.file_field :avatar %>  
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

               <div class="password-field mb-4" >
              <%= f.label :password ,hint: "leave it blank if you don't want to change it"%> 
                <%= f.input :password,
                    required: false,
                    label:false,
                    input_html: {  autocomplete: "new-password",class: "form-control"} %>
                 <p class="text-muted">Leave it blank if you don't want to change it</p>
             </div>
               <div class="password-field mb-4" >
              <%= f.label :password_confirmation%> 
            <%= f.input :password_confirmation,
                        required: false,
                        label:false,
                        input_html: {  autocomplete: "new-password",class: "form-control"} %>
              </div>
          
          <div class="form-actions">
            <%= f.button :submit, "Update",:class => "btn btn-primary btn-block my-4" %>
          </div>
        <% end %>
       </div>

      <div class="col-md-3 ml-3 mt-5">
        <h4>Cancel my account</h4>

        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back ,class:"btn btn-primary"%>
      </div>
    </div>
</div>

 
    
      
    
    
   

