<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6 text-center">
          <p class="h4 mb-4">Edit <%= resource_name.to_s.humanize %></p>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put ,class: "text-center border border-light p-5"}) do |f| %>
             <%= f.error_notification %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
      
              <div class="text-field">
                 <%= f.input :first_name, required: true, autofocus: true ,class: "form-control mb-4",id:"defaultLoginFormEmail" %>
              </div>
              <div class="text-field">
                 <%= f.input :last_name, required: true, autofocus: true ,class: "form-control mb-4",id:"defaultLoginFormEmail" %>
              </div>
              <div class="text-field">
                <%= f.input :email, required: true, autofocus: true %>
              </div>

              <div class="text-field">
                <%= f.file_field :avatar %>  

              <div class="password-field">
                  <%= f.input :password,
                        hint: "leave it blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "new-password",class: "form-control mb-4",id:"defaultLoginFormPassword" } %>
              </div>

              <div class="password-field">
                  <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
              </div>

          <div class="form-actions">
              <div class="submit-field">
            <%= f.button :submit, "Update",:class => "btn btn-info btn-block my-4" %>
          </div>
             

       <% end %>    
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back ,class:"btn btn-primary"%>
       </div>
    </div>
</div>

 
    
      
    
    
   

